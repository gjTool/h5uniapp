page {
  height: 100%;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  height: 100%;
  background: #fff;
}
.scroll {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  position: relative;
  background-color: #f8f8f8;
  height: 0;
}
.scroll-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}
.image-box {
  width: 340rpx;
  height: 460rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
uni-image {
  width: 340rpx;
  height: 460rpx;
}
.text-box {
  margin-top: 20rpx;
  padding: 10rpx;
  font-size: 24rpx;
}
.text-right {
  width: calc(100% - 360rpx);
  font-size: 24rpx;
  position: absolute;
  top: 0;
  right: 0;
  padding: 10rpx;
  font-size: 14px;
}
.text-bottom {
  width: calc(100% - 360rpx);
  position: absolute;
  top: 420rpx;
  right: 0;
  padding: 10rpx;
  font-size: 28rpx;
}
.text-bottom button,
  .text-bottom text,
  .text-bottom switch {
    float: left;
}
.text-bottom text {
    margin-top: 10rpx;
}
switch {
  -webkit-transform: scale(0.7);
      -ms-transform: scale(0.7);
          transform: scale(0.7);
}
.play-button {
  margin-right: 30rpx;
}
.list-box {
  padding: 10rpx;
  padding-bottom: 20rpx;
  font-size: 32rpx;
}
.list-box button {
    margin-top: 20rpx;
    margin-right: 20rpx;
}
.performer {
  height: 180rpx;
  overflow: hidden;
}
.video-box {
  width: 100%;
  height: 450rpx;
  position: relative;
}
.video-box video {
    width: 100%;
    position: relative;
}
cover-view,
cover-image {
  display: inline-block;
}
.cover-view {
  color: #FFFFFF;
}

