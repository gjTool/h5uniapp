page {
  height: 100%;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: 100%;
  background: #fff;
}
.scroll {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  position: relative;
  background-color: #f8f8f8;
  height: 0;
  padding-top: 64px;
}
.scroll-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.image-box {
  width: 170px;
  height: 230px;
  margin-top: 5px;
  margin-left: 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
uni-image {
  width: 170px;
  height: 230px;
}
.text-box {
  margin-top: 10px;
  padding: 5px;
  font-size: 12px;
}
.text-right {
  width: calc(100% - 180px);
  font-size: 12px;
  position: absolute;
  top: 0;
  right: 0;
  padding: 5px;
  font-size: 14px;
}
.text-bottom {
  position: absolute;
  top: 210px;
  left: 150px;
}
switch {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.play-button {
  margin-right: 10px;
  margin-top: 20px;
  display: inline-block;
}
.list-box {
  padding: 10px;
  font-size: 16px;
}
.performer {
  height: calc( 100% -  230px);
  overflow: hidden;
  text-indent: 25px;
}
.button-box {
  margin-top: 10px;
}
.text-zx {
  font-size: 14px;
  padding-left: 10px;
  padding-top: 10px;
  margin-top: 10px;
}
.text-zx .text-zx-content {
    color: #333;
}
.text-zx .text-zx-content.active {
    color: #007AFF;
    font-weight: 500;
}

