.scroll {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  position: fixed;
  background-color: #f8f8f8;
  height: calc(100% - 125px);
  top: 125px;
  left: 0;
  overflow-y: auto;
  width: 750rpx;
  z-index: 999999;
}
.scroll-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.text-box {
  padding: 5px;
}
.text-box .text {
    margin: 0;
    padding: 0;
    line-height: 22px;
}
.text-box.ipad {
  position: absolute;
  top: 136px;
  right: 0;
  width: calc(100% - 110px);
  height: 140px;
  overflow: hidden;
  padding: 5px;
}
.image-box {
  width: 100px;
  height: 140px;
  margin-top: 5px;
  margin-left: 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.uni-image {
  width: 100px;
  height: 140px;
}
.text-right {
  width: calc(100% - 110px);
  position: absolute;
  top: 0;
  right: 0;
  padding: 5px;
}
.text-bottom {
  width: calc(100% - 110px);
  position: absolute;
  top: 140px;
  right: 0;
  padding: 5px;
}
.text-bottom button,
  .text-bottom text,
  .text-bottom switch {
    float: left;
}
.text-bottom text {
    margin-top: 5px;
}
.text-bottom.ipad {
  top: 145px;
}
.play-button {
  margin-right: 15px;
}
.list-box {
  padding: 5px;
  padding-bottom: 20px;
}
.list-box button {
    margin-top: 10px;
    margin-right: 10px;
}
.performer {
  height: 60px;
  overflow: hidden;
}
.text-over {
  height: 22px;
}
.text-over1 {
  margin-bottom: 10px;
}
.text {
  font-size: 14px;
  line-height: 22px;
  height: 22px;
}
.video-box {
  width: 750rpx;
  height: 175px;
  position: absolute;
  top: 0px;
  left: 0;
  z-index: 10;
  background-color: #000000;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.video-box-img {
  width: 40px;
  height: 40px;
}
.backImg {
  width: 100%;
  height: 32px;
  position: absolute;
  top: 170px;
