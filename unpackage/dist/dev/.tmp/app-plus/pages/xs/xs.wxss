.img-list {
  width: 750rpx;
}
image {
  width: 750rpx;
}
uni-image {
  width: 750rpx;
}
page {
  height: 100%;
  background-color: #ebd8b0;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: 100%;
}
.scroll {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 100%;
  position: relative;
  z-index: 0;
}
.scroll-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 20px 0;
}
.text-item {
  padding: 0 6px;
  text-indent: 16px;
  font-size: 18px;
}
.text-content {
  font-size: 20px;
}
.text-item.text-grey {
  color: #444;
  font-size: 14px;
  text-indent: 0px;
  text-align: center;
}
.text-item.black {
  color: #555;
}
.scroll,
.uni-scroll-view,
.scroll-content {
  background-color: #ebd8b0;
}
.scroll.black,
.uni-scroll-view.black,
.scroll-content.black {
  background-color: #070707;
}
.bottom-tools {
  width: 100%;
  position: fixed;
  z-index: 1;
  bottom: 0;
  left: 0;
  background-color: #ec706b;
  -webkit-transition: all 0.1s;
  transition: all 0.1s;
}
.bottom-tools .bottom-view {
    width: 100%;
    padding: 7px 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.bottom-tools .bottom-view .bottom-button {
      color: #ffffff !important;
      border: 1px solid #ffffff !important;
}
.bottom-tools .bottom-view .bottom-button.bottom-button1 {
      color: #ffffff !important;
      border: none !important;
      padding: 0 !important;
      margin: 0 !important;
}
.bottom-tools .bottom-view .bottom-slider {
      min-width: 230px;
      width: calc(100% - 150px);
      margin: 0;
}
.bottom-tools.hide {
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
}
.bottom-tools.sow {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.text-item-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 20px;
  background-color: #ebd8b0;
  z-index: 1;
  font-size: 12px;
  color: #555555;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-indent: 0px;
}
.text-item-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20px;
  background-color: #ebd8b0;
  z-index: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.text-item-bottom .battery {
    font-size: 10px;
    margin-right: 30px;
}
.text-item-bottom .time {
    font-size: 12px;
    color: #555555;
    position: absolute;
    text-align: center;
    width: 100%;
    top: 0;
    left: 0;
}
.text-item-bottom .time.android {
    top: 4px;
}
.text-item-bottom .pagenum {
    font-size: 12px;
    color: #555555;
    position: absolute;
    text-align: right;
    top: 0;
    right: 10px;
}
.text-item-top.black,
.text-item-bottom.black {
  background-color: #070707;
}
.swiper-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 100%;
  position: relative;
  z-index: 0;
}

